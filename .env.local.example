# SamvaadCop Environment Variables
# Copy this file to .env.local and fill in your actual values

# BHASHINI API Configuration
NEXT_PUBLIC_BHASHINI_BASE_URL=https://dhruva-api.bhashini.gov.in/services
NEXT_PUBLIC_BHASHINI_API_KEY=your_bhashini_api_key_here
NEXT_PUBLIC_BHASHINI_USER_ID=your_bhashini_user_id_here

# Application Configuration
NEXT_PUBLIC_APP_NAME=SamvaadCop
NEXT_PUBLIC_APP_VERSION=1.0.0

# Optional: Analytics and Monitoring
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# Development Settings
NODE_ENV=development